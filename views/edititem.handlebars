                    <div class="cart-title">
                        <h2>Edit Your Item</h2>
                    </div>

                    <form action="/edit/{{product._id}}" method="post">
                      <div class="row">
                                <div class="col-12 mb-3">
                                    <input name="item" type="text" class="form-control" id="first_name" value="{{product.name}}" placeholder="Product Name" required>
                                </div>

                                <div class="col-12 mb-3">
                                    <input name="price" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" id="first_name" value="{{product.price}}" placeholder="Product Price" required>
                                </div>

                            <div class="col-12 mb-3">
                                <input name="firstpic" type="text" class="form-control" id="primepic" value="{{product.FirstPic}}"placeholder="PrimePic Link" value="">
                            </div>
                            <div class="col-12 mb-3">
                                <input name="secondpic" type="text" class="form-control" id="secondpic" value="{{product.SecondPic}}" placeholder="SecondPic Link" value="">
                            </div>


                            <div class="col-12 mb-3">
                                <input name="thirdpic" class="form-control" id="thirdpic" value="{{product.ThirdPic}}" placeholder="ThirdPic Link" value="">
                            </div>

                            <div class="col-12 mb-3">
                                <input name="fourthpic" class="form-control" id="fourthpic" value="{{product.FourthPic}}" placeholder="FourthPic Link" value="">
                            </div>

                            <div class="col-12 mb-3">
                                <input name="link" type="text" class="form-control" id="finallink" value="{{product.Link}}" placeholder="Link to your detail page" value="">
                            </div>

                            <div class="col-12 mb-3">
                                <textarea name="desc" class="form-control w-100" id="comment" cols="30" rows="10" placeholder="Product Description">{{product.Description}}</textarea>
                            </div>

                            <div class="col-12 mb-3">
                            <div class="clearfix">
                              <button style="font-size: 20px" type = "submit" class="w-100">Edit Item</a>
                            </div>
                            </div>

                          </div>
                            </form>


                            <form action="/remove/{{product._id}}" method="post">
